@model IEnumerable<Monafasati.Core.Entity.Monafsa>
@{
    ViewData["Title"] = "Home Page";
}

@{
    ViewData["Title"] = "Home Page";
}
<div class="card text-center">
    <div class="card-header">إعدادات المنافسات</div>
    <div id="accordion">
        <div class="card">
            <div class="card-header">
                <a class="card-link" data-toggle="collapse" href="#collapseOne">
                    <h3>  المنافسات</h3>
                </a>
            </div>
            <div id="collapseOne" class="collapse show" data-parent="#accordion">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <img alt="Monafasta" class="img-thumbnail rounded-circle" src="~/Image/Icons/ايقونات حرة 2020-12.png" />

                            <a asp-controller="Home" asp-action="list"> <h6>عرض المنافسات</h6></a>
                        </div>
                        <div class="col-4">
                            <img alt="Monafasta" class="img-thumbnail rounded-circle" src="~/Image/Icons/Calender.png" />

                            <a asp-controller="Status" asp-action="index"> <h6>وضع المنافسات</h6></a>
                        </div>

                        <div class="col-4">
                            <img alt="Monafasta" class="img-thumbnail rounded-circle" src="~/Image/Icons/ايقونات حرة 2020-02.png" />

                            <a asp-controller="Units" asp-action="index"> <h6>وحدات القياس</h6></a>
                        </div>
                    </div>
                    </div>
                </div>
        </div>
        <div class="card">
            <div class="card-header">
                <a class="collapsed card-link" data-toggle="collapse" href="#collapseTwo">
                    <h3>المسؤولين</h3>
                </a>
            </div>
            <div id="collapseTwo" class="collapse" data-parent="#accordion">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <img alt="Monafasta" class="img-thumbnail rounded-circle" src="~/Image/Icons/person-male.png" />

                            <a asp-controller="Engineers" asp-action="index"> <h6>عرض المسؤليين</h6></a>
                        </div>
                        <div class="col-4">
                            <img alt="Monafasta" class="img-thumbnail rounded-circle" src="~/Image/Icons/person-male.png" />

                            <a asp-controller="Engineers" asp-action="Create"> <h6>أضافة مسؤول</h6></a>
                        </div>
              

                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <a class="collapsed card-link" data-toggle="collapse" href="#collapseThree">
                    <h3> إعدادت عامة</h3>
                </a>
            </div>
            <div id="collapseThree" class="collapse" data-parent="#accordion">
                <div class="card-body">
                    <div class="col-4">
                        <img alt="Monafasta" class="img-thumbnail rounded-circle" src="~/Image/Icons/person-male.png" />
                    @*    <a asp-page="./Identity/Register">تسجيل كمستخدم جديد</a>*@
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


