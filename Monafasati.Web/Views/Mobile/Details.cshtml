@{
}
@model Monafasati.Core.Entity.Monafsa;
<div class="card text-center">
    <div class="card-header">
        @Html.DisplayFor(model => model.Name, null, new { @class = "text-center" })
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered text-right">
            <tbody>
                <tr>
                    <td>  @Html.DisplayNameFor(model => model.Advertiser)</td>
                    <td> @Html.DisplayFor(model => model.Advertiser)</td>
                </tr>
                <tr>
                    <td> @Html.DisplayNameFor(model => model.LastDate)</td>
                    <td> @Html.DisplayFor(model => model.LastDate)</td>
                </tr>
                <tr>
                    <td>  @Html.DisplayNameFor(model => model.Price)</td>
                    <td>  @Html.DisplayFor(model => model.Price)</td>
                </tr>
                <tr>
                    <td>  @Html.DisplayNameFor(model => model.Engineer)</td>
                    <td>   @Html.DisplayFor(model => model.Engineer.Name)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Statu)</td>
                    <td>   @Html.DisplayFor(model => model.Statu.Name)</td>
                </tr>
                <tr>
                    <td>   @Html.DisplayNameFor(model => model.Sadad)</td>
                    <td>   @Html.DisplayFor(model => model.Sadad)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.PdfFile)</td>
                    <td><a class="btn btn-primary" href="../../Upload/@Model.PdfFile">الملف</a> || <a asp-controller="Items" asp-action="Monafsa" asp-route-id="@Model.Id" class="btn btn-primary"> عرض التسعير</a></td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Note)</td>
                    <td>@Html.DisplayFor(model => model.Note)</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <div>
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">تعديل</a>
            <a class="btn btn-primary" asp-action="Index">قائمة المناقصات</a>
        </div>
    </div>

</div>